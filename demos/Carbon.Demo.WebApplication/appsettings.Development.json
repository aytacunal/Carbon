{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Swagger": {
    "EndpointUrl": "/swagger/v1/swagger.json",
    "EndpointName": "My API V1",
    "Documents": [
      {
        "DocumentName": "v1",
        "OpenApiInfo": {
          "Title": "My API",
          "Version": "v1",
          "Description": "My API Description"
        }
      }
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "%TEMP%\\Logs\\carbon.demo.webapplication.txt"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Carbon.Demo.WebApplication"
    }
  }
}
